@model IEnumerable<BusinessTrips.Models.Passage>

@{
    ViewBag.Title = "Index";
}

<h2>Страница для работы с поездкой</h2>

<p>
    @Html.ActionLink("Создать", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.DutyJourney.City)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DateofDeparture)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DateofArrival)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Transport)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DestinationPoint)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DeparturePoint)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.DutyJourney.City)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DateofDeparture)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DateofArrival)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Transport)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DestinationPoint)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DeparturePoint)
        </td>
        <td>
            @Html.ActionLink("Редактировать", "Edit", new { id=item.Id }) 
            @if (User.IsInRole("Admin"))
            {
                Html.ActionLink("Удалить", "Delete", new { id = item.Id });
            }
        </td>
    </tr>
}

</table>
