<div class="container">
    <div style="margin-top: 20px" class="col-md-6">
        @using (Ajax.BeginForm("Search", "Employees",
                                            new AjaxOptions
                                            {
                                                InsertionMode = InsertionMode.Replace,
                                                HttpMethod = "POST",
                                                LoadingElementId = "loadingBar",
                                                LoadingElementDuration = 1500,
                                                UpdateTargetId = "resultSearch",
                                            }))

        {


            <form class="form-group">
                <div class="form-group row">
                    <label class="form-control-label" for="text">Введите имя сотрудника: </label>
                    <input id="text" type="text" name="surname" placeholder="Имя" class="form-control" />
                </div>
                <div class="form-group row">
                    <button type="submit" class="btn btn-primary">Search</button>
                </div>
            </form>

            <img id="loadingBar" img src="@Url.Content("~/Content/ajax-loader.gif")" style="display:none" />
            <div id="resultSearch"></div>

        }
    </div>
</div>
