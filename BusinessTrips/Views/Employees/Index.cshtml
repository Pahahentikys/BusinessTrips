@model IEnumerable<BusinessTrips.Models.Employee>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>


    @Html.ActionLink("Create New", "Create")
    <div class="form-horizontal">
    <div class="form-group">
        <div class="col-md-offset-0 col-md-10">
            @using (Ajax.BeginForm("EmployeeSearch", "Employees", new AjaxOptions
            {
                UpdateTargetId = "resultSearch",
                LoadingElementId = "loadingBar",
                LoadingElementDuration = 800
            }))
            {
                <form action="/EmployeesController/EmployeeSearch" data-ajax="true" data-ajax-mode="replace" data-ajax-update="#resultSearch" id="form0" method="post">
                    <input type="text" name="text" class="form-control" />
                    <input type="submit" value="Search" class="btn btn-default" />
                </form>
            }

        </div>
    </div>
    <div id="resultSearch"></div>
    <div id="loadingBar" style="display:none; color:red; font-weight:bold"></div>
</div>

    

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Surname)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Lastname)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Surname)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Lastname)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>



