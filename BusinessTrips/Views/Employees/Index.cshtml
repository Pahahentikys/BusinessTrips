@model IEnumerable<BusinessTrips.Models.Employee>

@{
    ViewBag.Title = "Index";
}

<p style="margin-top:50px">
       <h2>Страница добавления сотрудника: </h2>
</p>
@Html.Partial("_ImportAndExportEmplForm")
<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.DutyJourneys.Point)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Surname)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Lastname)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.BirthDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.OfficialPosition)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Pasport)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NumberPhone)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.DutyJourneys.Point)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Surname)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Lastname)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.BirthDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.OfficialPosition)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Pasport)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.NumberPhone)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @if (User.IsInRole("Admin"))
            {
                Html.ActionLink("Delete", "Delete", new { id = item.Id });
            }
        </td>
    </tr>
}

</table>
